<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="35dp"
    android:weightSum="10"
    android:background="@drawable/pizarra"
    tools:context=".FutbolFragment">

    <ImageButton
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/logook"
        android:scaleType="centerCrop"
        android:id="@+id/imageButton5"


        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HORA DEL PARTIDO:"
        android:id="@+id/hora_partido"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorWite"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="HORA"
        android:id="@+id/hora_partidos"
        android:textAlignment="center"
        android:textColor="@color/colorWite"
        android:textStyle="bold"
        />

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/equipoa"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="@color/colorWite"
        />

    <TextView
        android:layout_weight="2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/vs"
        android:id="@+id/textView5"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        />

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/equipob"


        android:textSize="25dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="@color/colorWite"
        android:textAlignment="center"

        />



</LinearLayout>
