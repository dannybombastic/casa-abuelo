<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/pizarra"
    tools:context="com.danny.danny.casaabuelo.EventosFragment">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logook"
        android:scaleType="centerCrop"
        android:id="@+id/imageButton4"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_above="@+id/evento_texto"
        android:contentDescription="logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nombre evento"
        android:id="@+id/evento_nombre"
        android:textSize="27sp"
        android:gravity="center"
        android:textColor="@color/colorWite"
        android:textStyle="bold"
        android:typeface="serif"

        android:layout_marginTop="198dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/evento_texto"
        android:layout_alignEnd="@+id/evento_texto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Eventos"
        android:id="@+id/evento_texto"
        android:layout_alignTop="@+id/evento_nombre"
        android:layout_marginTop="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/colorWite"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
